@model PJobs.Models.JobViewModel

@using System.Globalization
@{
    Layout = "_Layout1";
}

<!-- ***** Call to Action Start ***** -->
<section class="section section-bg" id="call-to-action" style="background-image: url(~/wwwroot/images/backgroundtest.jpg);">
    <div class="container">

        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="cta-content">
                    <br>
                    <br>
                    <h2>Toàn bộ <em>Jobs</em></h2>
                    <p>Với đủ mọi loại ngành nghề và hình thức làm việc, hãy chọn cho mình những công việc phù hợp nhất</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Call to Action End ***** -->
<!-- ***** Fleet Starts ***** -->
<section class="section" id="trainers">
    <div class="container">
        <div class="col-lg-12">
            <div class="row">
                <div class="container">
                    <br />
                    <form class="form-inline">
                        <div class="form-group mb-2">
                            <select class="form-control" title="Hãy chọn nghề nghiệp của bạn">
                                <option>Nghề nghiệp</option>
                                @foreach (var item in ViewBag.DSNganhNghe)
                                {
                                    <option value="@item.MaNghe">@item.TenNghe</option>
                                }
                            </select>
                        </div>
                        <div class="form-group mx-sm-3 mb-2">
                            @*<select class="form-control" title="Hãy chọn kỹ năng của bạn">
                            <option>Kỹ năng</option>
                            <option>1</option>
                            </select>*@
                          
                            @Html.DropDownListFor(m => m.MaKiNang,
              new SelectList(Model.DSKiNang, "MaKiNang", "TenKiNang"), "Kỹ năng", new { @class= "form-control" })

                        </div>
                        <div class="form-group mb-2" title="Hãy chọn thành phố bạn tìm">
                            <select class="form-control">
                                <option>Thành phố</option>
                                <option>1</option>
                            </select>
                        </div>
                        <div class="form-group mx-sm-3 mb-2" title="Hãy chọn quận/huyện bạn tìm">
                            <select class="form-control">
                                <option>Quận/ huyện</option>
                                <option>1</option>
                            </select>
                        </div>
                        <button type="submit" class="btn mb-2" style="background-color:#ed563b; color:white">Tìm</button>
                    </form>
                </div>
                <div class="row">
                    @foreach (var item in Model.NewJoins)
                    {
                        var info = System.Globalization.CultureInfo.GetCultureInfo("vi-VN");
                        string value = (String.Format(info, "{0:c}", item.MucLuong));
                        <div class="col-md-4">
                            <div class="trainer-item" style="margin-top:20px; margin-left:5px; margin-right:5px; width:350px; height:600px">
                                <div class="image-thumb">
                                    <img src="~/images/@item.HinhAnh" style="width:320px; height:250px">
                                </div>
                                <div class="down-content">
                                    <span>@value</span>
                                    <h4>@item.TieuDe</h4>
                                    <p>Vị trí tuyển: @item.ViTriTuyenDung</p>
                                    <p>Tên công ty: @item.TenCongTy</p>
                                    <p>Lĩnh vực: @item.LinhVuc</p>
                                    <ul class="social-icons">
                                        <li><a href="job/jobdetails/@item.MaTinTuyenDung">+ View More</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <br />
        <nav>
            <ul class="pagination pagination-lg justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">«</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">»</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</section>


<!-- ***** Fleet Ends ***** -->
