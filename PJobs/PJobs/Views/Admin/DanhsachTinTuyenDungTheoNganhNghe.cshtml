@model List<TinTuyenDung>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Navbar -->
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>Quản lý công việc</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active">Quản lý công việc</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <div class="row">

                        <!-- /.col -->
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <div class="row">

                    </div>
                    <!-- /.row -->
                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Fixed Header Table</h3>
                                    <div></div>
                                    <div style="margin-left:75%" class="btn-group ">

                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-upload"></i>
                                            <span>Add</span>
                                        </button>
                                    </div>

                                </div>
                                <!-- /.card-header -->
                                <div class="card-body table-responsive p-0" style="height: 300px;">
                                    <table class="table table-head-fixed text-nowrap">
                                        <thead>
                                            <tr>

                                                <th>Mo ta cong viec </th>
                                                <th>Muc Luong</th>
                                                <th>Ngay</th>

                                                <th>Thao tac</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr data-widget="expandable-table" aria-expanded="false">
                                                <td>@item.MoTaCongViec</td>
                                                <td>@item.MucLuong</td>
                                                <td>@item.NgayHetHan</td>
                                                <td>

                                                    @Html.ActionLink("Chi tiet", "chitiettintuyendung", "admin", new { id = @item.MaTinTuyenDung })



                                                </td>



                                                <td>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-upload"></i>
                                                        <span>Edit</span>
                                                    </button>
                                                    
                                                   
                                                    
                                                </td>

                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                                <!-- /.card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                    </div>
                    <!-- /.row -->
                    <div class="row">

                    </div>
                    <!-- /.row -->
                    <div class="row">

                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <!-- /.control-sidebar -->
    </div>
</body>
